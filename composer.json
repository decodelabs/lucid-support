{
    "name": "decodelabs/lucid-support",
    "description": "Support Lucid sanitisation in your libraries without the dependencies",
    "type": "library",
    "keywords": ["validation", "sanitisation", "input", "support"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",

        "decodelabs/coercion": "^0.2.2",
        "decodelabs/exceptional": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "suggest": {},
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Lucid\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.2.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
