{
    "name": "decodelabs/lucid-support",
    "description": "Support Lucid sanitisation in your libraries without the dependencies",
    "type": "library",
    "keywords": [ "validation", "sanitisation", "input", "support" ],
    "license": "MIT",
    "authors": [ {
            "name": "Tom Wright",
            "email": "tom@inflatablecookie.com"
        } ],
    "require": {
        "php": "^8.4",

        "decodelabs/coercion": "^0.3",
        "decodelabs/exceptional": "^0.5.2"
    },
    "require-dev": {
        "decodelabs/phpstan-decodelabs": "^0.7"
    },
    "suggest": { },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Lucid\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.5.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
