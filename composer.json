{
    "name": "decodelabs/lucid-support",
    "description": "Support Lucid sanitisation in your libraries without the dependencies",
    "type": "library",
    "keywords": ["validation", "sanitisation", "input", "support"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",

        "decodelabs/exceptional": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6",
        "decodelabs/lucid": "^0.1|^0.2"
    },
    "suggest": {},
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Lucid\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "ecs": "ecs check --no-progress-bar",
        "ecs-fix": "ecs check --no-progress-bar --fix",
        "lint": "parallel-lint src/ tests/ ecs.php",
        "eclint": "eclint check src/ tests/ ecs.php",
        "eclint-fix": "eclint fix src/ tests/ ecs.php",
        "non-ascii": "! LC_ALL=C.UTF-8 find src/ tests/ -type f -name \"*.php\" -print0 | xargs -0 -- grep -PHn \"[^ -~]\" | grep -v '// @ignore-non-ascii$'",
        "check": [
            "@composer update",
            "@analyze",
            "@ecs",
            "@lint",
            "@eclint",
            "@non-ascii"
        ]
    }
}
